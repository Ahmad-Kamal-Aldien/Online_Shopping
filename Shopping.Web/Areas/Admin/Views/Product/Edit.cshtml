@model ProductCategoryViewModel

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <div class="row">
        <div class="col-7">
            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-control">
                    <option disabled selected>Choose Category</option>
                </select>
                <span asp-validation-for="Product.CategoryId"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.Image"></label>
                <input type="file" onchange="changedirectimage(event)" id="formid" name="formFile" asp-for="Product.Image" class="form-control" />
                <span asp-validation-for="Product.Image"></span>

            </div>
        </div>
        <div class="col-5">

            <label asp-for="Product.Image"></label>
            <img id="img" src="~/@Model.Product.Image" class='img-fluid w-100' asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image"></span>




        </div>

    </div>


    
    <input type="submit" class="btn btn-success" value="Save" />
</form>

@section Scripts{

    <script>
        var changedirectimage = function (event) {

     
        var newImage = document.getElementById("img");
            newImage.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}