@model IEnumerable<Category>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.Raw( @item.Description)</td>
                <td>
                    <a type="button" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>

                </td>
                <td>
                    <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<a style="align-items:flex-end" asp-action="Add" class="btn btn-dark">Add</a>