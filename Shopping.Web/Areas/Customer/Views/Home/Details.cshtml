@model ShoppingCart

@* <div class="col mb-12"> *@

<link href="~/customer/css/poductdetails.css" rel="stylesheet" />
<form method="post" asp-action="Details">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ProID" />
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images p-3">
                                <div class="text-center p-4">
                                    <img id="main-image"
                                         src="~/@Model.Product.Image"
                                         width="250" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product p-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-long-arrow-left">

                                        </i>
                                        <span class="ml-1">
                                        </span>
                                    </div>
                                    <i class="fa fa-shopping-cart text-muted"></i>
                                </div>
                                <div class="mt-4 mb-3">
                                    <span class="text-uppercase text-muted brand">
                                        @Model.Product.Category.Name
                                    </span>
                                    <h5 class="text-uppercase">@Model.Product.Name</h5>
                                    <div class="price d-flex flex-row align-items-center">
                                        <span class="act-price">  @Model.Product.Price</span>
                                    </div>
                                </div>
                                <p class="about">@Model.Product.Description</p>

                                <div class="cart mt-4 align-items-center ">

                                    <div class="row">
                                        <div class="col-6">
                                            <input type="number"
                                                   asp-for=@Model.Count
                                                   class="form-control me-3 "
                                                   value="1" max="100" min="1" />
                                        </div>
                                        <div class="col-3">
                                            <input type="submit" class="btn btn-danger
                                            text-uppercase mr-2 px-4 "
                                                   value="Add to cart" />
                                        </div>





                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
